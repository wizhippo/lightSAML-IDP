{
    "name": "lightsaml/lightsaml-idp",
    "license": "GPL-3.0+",
    "type": "library",
    "description": "Light SAML2 IDP php library",
    "autoload": {
        "psr-4": {
            "LightSaml\\Idp\\": "src/LightSaml/Idp"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LightSaml\\Idp\\Tests\\": "tests/LightSaml/Idp/Tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "lightsaml/lightsaml": "dev-lsv2support"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "satooshi/php-coveralls": "~0.6"
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "repositories": [
        { "type": "vcs", "url": "https://github.com/wizhippo/lightSAML" },
        { "type": "vcs", "url": "https://github.com/wizhippo/SymfonyBridgeBundle" }
    ]
}
